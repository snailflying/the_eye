<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/itemMerge"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/NormalPadding12"
            android:layout_marginRight="@dimen/NormalPadding12"
            android:layout_marginBottom="@dimen/SmallerPadding6"
            android:background="@drawable/app_solid_radius_label_white"
            android:ellipsize="end"
            android:lines="1"
            android:paddingHorizontal="@dimen/AppPadding4"
            android:paddingVertical="@dimen/AppPadding1"
            android:textColor="@color/color_text_1"
            android:textSize="@dimen/font_text_4"
            app:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toTopOf="@id/tvSubTitle"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivPoster"
            app:layout_goneMarginBottom="@dimen/margin_vertical_fixed_1"
            tools:text="年度折扣最低"
            tools:visibility="visible" />

    <TextView
            android:id="@+id/tvSubTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/NormalPadding12"
            android:layout_marginRight="@dimen/NormalPadding12"
            android:layout_marginBottom="@dimen/NormalPadding12"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/color_text_3"
            android:visibility="gone"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ivPoster"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:text="开通会员享专属服务"
            tools:visibility="visible" />

    <ImageView
            android:id="@+id/ivPoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="13dp"
            android:src="@drawable/ic_oppointment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            tools:visibility="visible" />
</merge>