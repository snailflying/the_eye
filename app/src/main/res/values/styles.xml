<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScrollViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:overScrollMode">never</item>
    </style>
    <!--设置页面-->
    <style name="Mine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="Mine.Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/text_color_title</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Mine.Content">
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/text_color_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--设置页面-->
    <style name="Setting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Setting.Title">
        <item name="android:textColor">@color/text_color_title</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Setting.Content">
        <item name="android:textColor">@color/text_color_title</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Setting.Desc">
        <item name="android:textColor">@color/text_color_title</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Setting.Link">
        <item name="android:textColor">@color/text_color_link</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Setting.Edit">
        <item name="android:textColor">@color/text_color_title</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
        <item name="android:background">@color/color_transparent</item>
    </style>
    <!--   所有的按钮，不按页面区分，统一放一起-->
    <style name="AppBtn" />

    <style name="AppBtn.Login">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_app_btn_main</item>
    </style>

    <style name="AppBtn.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>

    </style>

    <style name="AppBtn.Dialog.Confirm">
        <item name="android:background">@drawable/shape_app_btn_dialog_confirm</item>
    </style>

    <style name="AppBtn.Dialog.Cancel">
        <item name="android:background">@drawable/shape_app_btn_dialog_cancel</item>
    </style>
</resources>
